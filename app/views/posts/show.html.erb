<div class="post-content show">
<%= image_tag(@post.picture.url) if @post.picture?%>
  <p><%= simple_format(@post.content) %></p>

  <% if @replies = Reply.where(post_id: @post.id) %>
    <ul>
      <% @replies.each do |reply| %>
      <li>
        <%= simple_format(reply.content) %><span><%= time_ago_in_words(reply.created_at) %>前</span>
        <%= link_to "消", reply, method: :delete, data: { confirm: "消しますか？"} if current_user?(reply) || admin %>
      </li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <span id="post-form-<%= @post.id %>">
      <%= render 'posts/like', post: @post%>
    </span>
    <a class="icon" href="<%= edit_reply_path(@post) %>">
      <%= image_tag'kome.png', height: '18', alt: "コメントする" %>
      コメントする
    </a>
  </div>

  <%= time(@post.created_at) %><span><%= time_ago_in_words(@post.created_at) %>前</span>
  <%= link_to "編", edit_post_path(@post) if current_user?(@post) %>
  <%= link_to "消", @post, method: :delete, data: { confirm: "消しますか？"} if current_user?(@post) || admin %>
</div>

<hr>
<strong><%= link_to 'トップへ戻る', root_path %>
<%= link_to '私の履歴へ', mypost_path %></strong>
