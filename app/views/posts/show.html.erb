<div class="post-content show">
<%= image_tag(@post.picture.url) if @post.picture?%>
  <p><%= @post.content %></p>

  <div >

    <span id="post-form-<%= @post.id %>">
      <%= render 'posts/like',  post: @post%>
    </span>
    <%= link_to link_to image_tag("kome.png", height: '19', alt: "コメントする"), edit_reply_path(@post) %>
  </div>


  <% if @replies = Reply.where(post_id: @post.id) %>
    <% @replies.each do |reply| %>
      <ul>
        <li>
          <%= reply.content%><br><span><%= time_ago_in_words(reply.created_at) %>前</span>
          <%= link_to "消", reply, method: :delete, data: { confirm: "消すの？"} if current_user?(reply) || admin %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <%= link_to "編", edit_post_path(@post) if current_user?(@post) %>
  <%= link_to "消", @post, method: :delete, data: { confirm: "消すの？"} if current_user?(@post) || admin %>
  <br>
  <%= time(@post.created_at) %><span><%= time_ago_in_words(@post.created_at) %>前</span>
</div>

<hr>
<strong><%= link_to 'トップへ戻る', root_path %>
<%= link_to '私の履歴へ', mypost_path %></strong>
